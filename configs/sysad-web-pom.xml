<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.caista.birapps</groupId>
	<artifactId>sysad-web</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.5.12.RELEASE</version>
	</parent>

	<properties>
		<java.version>1.8</java.version>
		<maven.compiler.source>${java.version}</maven.compiler.source>
		<maven.compiler.target>${java.version}</maven.compiler.target>
		<dockerfile-maven-version>1.3.6</dockerfile-maven-version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<dependency>
			<groupId>io.springfox</groupId>
			<artifactId>springfox-swagger2</artifactId>
			<version>2.7.0</version>
		</dependency>

		<dependency>
			<groupId>io.springfox</groupId>
			<artifactId>springfox-swagger-ui</artifactId>
			<version>2.7.0</version>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${maven.compiler.source}</source>
					<target>${maven.compiler.target}</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>test</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target>
										<echo>Using application-dev.properties</echo>
										<echo>Project Build Output DIR :
											${project.build.outputDirectory}</echo>
										<delete
											file="${project.build.outputDirectory}/application.properties" />
										<copy file="build-config/application-dev.properties"
											tofile="${project.build.outputDirectory}/application.properties" />
										<delete
											file="${project.build.outputDirectory}/static/keycloak.json" />
										<copy file="build-config/keycloak-dev.json"
											tofile="${project.build.outputDirectory}/static/keycloak.json" />
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>test</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>test</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target>
										<echo>Using application-test.properties</echo>
										<echo>Project Build Output DIR :
											${project.build.outputDirectory}</echo>
										<delete
											file="${project.build.outputDirectory}/application.properties" />
										<copy file="build-config/application-test.properties"
											tofile="${project.build.outputDirectory}/application.properties" />
										<delete
											file="${project.build.outputDirectory}/static/keycloak.json" />
										<copy file="build-config/keycloak-test.json"
											tofile="${project.build.outputDirectory}/static/keycloak.json" />
										<delete file="${project.basedir}/Dockerfile" />
										<copy file="build-config/Dockerfile-test" tofile="${project.basedir}/Dockerfile" />
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>prod</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>test</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target>
										<echo>Using application-prod.properties</echo>
										<echo>Project Build Output DIR :
											${project.build.outputDirectory}</echo>
										<delete
											file="${project.build.outputDirectory}/application.properties" />
										<copy file="build-config/application-prod.properties"
											tofile="${project.build.outputDirectory}/application.properties" />
										<delete
											file="${project.build.outputDirectory}/static/keycloak.json" />
										<copy file="build-config/keycloak-prod.json"
											tofile="${project.build.outputDirectory}/static/keycloak.json" />
										<delete file="${project.basedir}/Dockerfile" />
										<copy file="build-config/Dockerfile-prod" tofile="${project.basedir}/Dockerfile" />
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>uatprem</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>test</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target>
										<echo>Using application-uat-prem.properties</echo>
										<echo>Project Build Output DIR :
											${project.build.outputDirectory}</echo>
										<delete
											file="${project.build.outputDirectory}/application.properties" />
										<copy file="build-config/application-uat-prem.properties"
											tofile="${project.build.outputDirectory}/application.properties" />
										<delete
											file="${project.build.outputDirectory}/static/keycloak.json" />
										<copy file="build-config/keycloak-uat-prem.json"
											tofile="${project.build.outputDirectory}/static/keycloak.json" />
										<delete file="${project.basedir}/Dockerfile" />
										<copy file="build-config/Dockerfile-uat-prem" tofile="${project.basedir}/Dockerfile" />
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<distributionManagement>
		<snapshotRepository>
			<id>caista-internal</id>
			<url>http://220.5.13.188:8080/repository/caista-internal/</url>
		</snapshotRepository>
	</distributionManagement>

</project>